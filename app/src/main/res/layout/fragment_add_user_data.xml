<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <FrameLayout
            android:id="@+id/container_image"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sdk_screen_header_height"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:background="@color/color_vendor_background_green"
    >

        <FrameLayout
                android:id="@+id/container_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/sdk_screen_logo_padding"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/padding_huge"
                    android:layout_marginBottom="@dimen/padding_huge"/>

        </FrameLayout>

        <ImageView
                android:id="@+id/image_mir_pay_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
        />

    </FrameLayout>


    <LinearLayout
            android:id="@+id/container_stage_success_labels"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_huge"
            android:layout_below="@id/container_image"
            android:visibility="gone"
            tools:visibility="visible"
    >

        <TextView
                android:id="@+id/label_description_success"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
        />

        <ImageView
                android:id="@+id/image_status_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/padding_huge"
        />

    </LinearLayout>

    <TextView
            android:id="@+id/label_description_add_card"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/padding_large"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_huge"
            android:layout_below="@id/container_image"
            tools:visibility="gone"
    />

    <android.support.design.button.MaterialButton
            android:id="@+id/button_add_card"
            style="@style/Widget.AppTheme.Button.Rounded"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_above="@id/button_skip_add_card"
            android:text="@string/button_connect"
            tools:visibility="visible"
            android:visibility="gone"
    />

    <android.support.design.button.MaterialButton
            android:id="@+id/button_skip_add_card"
            style="@style/Widget.AppTheme.Button.Rounded.Transparent"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginBottom="@dimen/padding_medium"
            android:text="@string/button_skip_add_card"
            android:layout_alignParentBottom="true"
            tools:visibility="visible"
            android:visibility="gone"
    />

    <TextView
            android:id="@+id/label_agreement_terms_and_condition"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="@color/color_hyperlink"
            android:gravity="center"
            android:layout_above="@id/button_continue"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_medium"

            android:visibility="gone"
    />

    <android.support.design.button.MaterialButton
            android:id="@+id/button_continue"
            style="@style/Widget.AppTheme.Button.Rounded"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginBottom="@dimen/padding_medium"
            android:text="@string/button_continue"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
    />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_processing_data"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/padding_large"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:layout_above="@id/label_processing_data"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/circle_progress"
            app:lottie_loop="true"
    />

    <TextView
            android:id="@+id/label_processing_data"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
    />

    <android.support.design.button.MaterialButton
            android:id="@+id/button_continue_on_success"
            style="@style/Widget.AppTheme.Button.Rounded"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginBottom="@dimen/padding_medium"
            android:text="@string/button_continue"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
    />

</RelativeLayout>
