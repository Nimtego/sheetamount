<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_bottom_sheet_navigation_bar">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:background="@color/color_button_add_card">

        <TextView
                android:textStyle="bold"
                android:textColor="@color/edit_text_color"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/confirmation_layout_padding_bottom"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>
        <TextView
                android:textStyle="bold"
                android:textColor="@color/edit_text_color"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/confirmation_layout_padding_bottom"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>

    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider_color_active">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingBottom="@dimen/confirmation_layout_padding_bottom"
                      android:descendantFocusability="beforeDescendants"
                      android:focusableInTouchMode="true">

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/TextInputEditText"
                      android:background="@drawable/rounded_shape"
                      android:layout_marginStart="54dp"
                      android:layout_marginEnd="54dp"
                      android:layout_gravity="center"
                      android:hint="@string/current"
                      android:layout_marginTop="@dimen/confirmation_layout_padding_bottom"
                      android:drawableStart="@drawable/ic_current_24dp"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="15dp"
                      android:layout_marginStart="54dp"
                      android:layout_marginEnd="54dp"
                      android:layout_gravity="center"
                      android:drawablePadding="10dp"
                      android:textSize="16sp"
                      android:hint="@string/current"
                      android:textColor="@color/edit_text_color"
                      android:textColorHint="@color/edit_text_hint_color"
                      android:textColorHighlight="@color/edit_text_color"
                      android:layout_marginTop="@dimen/confirmation_layout_padding_bottom"
                      android:drawableStart="@drawable/ic_current_24dp"
                      android:background="@drawable/rounded_shape"/>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
